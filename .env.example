# Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Owner IDs (comma-separated for multiple owners)
OWNER_ID=1008848605

# Database Configuration
DB_URI=mongodb://localhost:27017/
DATABASE_NAME=filestream_bot

# Channel/Chat Configuration
LOGS_CHAT_ID=0  # Channel ID for logging (optional)
DUMP_CHAT_ID=-1002199235178  # Channel ID where files are stored (REQUIRED)

# Media Configuration
Start_IMG=  # URL of start image (optional)

# Force Subscription (optional)
FSUB_ID=0  # Force subscription channel ID (0 to disable)
FSUB_INV_LINK=  # Invite link to force subscription channel

# Security (HMAC signing for file links)
SECRET_KEY=your_powerful_secret_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8080  # Cloud platforms (Heroku, Render) set this via environment
BASE_URL=https://your-domain.com  # For generating download links

# Performance Configuration
STREAM_CHUNK_SIZE=262144  # 256KB chunks for optimal streaming
MAX_CONCURRENT_DOWNLOADS=10
WORKERS=50  # Number of bot workers
SLEEP_THRESHOLD=10  # Sleep threshold for flood wait

# Dynamic Settings (stored in database, can be changed via bot commands)
# These are initial values - actual values loaded from database
PUBLIC_BOT=False  # Allow anyone to use bot
MAX_BANDWIDTH=107374182400  # 100GB default
MAX_TELEGRAM_SIZE=4294967296  # 4GB
MAX_STREAM_SIZE=2147483648  # 2GB
